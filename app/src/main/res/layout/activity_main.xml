<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <easypic.master.com.easypicproject.CourbeView
        android:id="@+id/courbeView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>

    <ListView
        android:id="@+id/list"
        android:layout_height="388dp"
        android:layout_width="match_parent"
        android:scrollbars="vertical"
        android:layout_weight="0.39">
    </ListView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="affichercourbe"
        android:id="@+id/affichergraphe" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AFFICHERBASE"
        android:id="@+id/afficherbase"
        android:layout_below="@+id/affichergraphe"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/courbeView"
        android:layout_alignEnd="@+id/courbeView" />


</RelativeLayout>
